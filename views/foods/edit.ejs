<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Recipe</title>
  </head>
  <body>
    <%- include("../partials/_navbar.ejs") %>

    <h1>Edit Pantry Item</h1>

    <form
      action="/users/<%= user._id %>/foods/<%= food._id %>?_method=PUT"
      method="post"
    >
      <div>
        <label for="title">Title:</label>
        <input
          type="text"
          name="title"
          id="title"
          value="<%= food.title %>"
          required
        />
      </div>

      <div>
        <label for="description">Description:</label>
        <input
          type="text"
          name="description"
          id="description"
          value="<%= food.description || '' %>"
        />
      </div>

      <div>
        <label for="prepTime">Prep Time (minutes):</label>
        <input
          type="number"
          name="prepTime"
          id="prepTime"
          min="0"
          value="<%= food.prepTimeMinutes %>"
        />
      </div>

      <div>
        <label for="cookTime">Cook Time (minutes):</label>
        <input
          type="number"
          name="prepTime"
          min="0"
          value="<%= food.cookTimeMinutes %>"
        />
      </div>

      <div>
        <label for="totalTime">Total Time (minutes):</label>
        <input
          type="number"
          name="totalTime"
          id="totalTime"
          min="0"
          value="<%= food.totalTimeMinutes %>"
        />
      </div>

      <div>
        <label for="servings">Servings:</label>
        <input
          type="number"
          name="serving"
          id="serving"
          min="1"
          value="<%= food.serving %>"
        />
      </div>

      <div>
        <label for="ingredients">Ingredients:</label>
        <textarea name="ingredients" id="ingredients">
<%= food.ingredients || '' %></textarea
        >
      </div>

      <div>
        <label for="instructions">Instructions:</label>
        <textarea name="instructions" id="instructions">
<%= food.instructions || '' %></textarea
        >
      </div>

      <div>
        <label for="cuisine">Cuisine:</label>
        <input
          type="text"
          name="cuisine"
          id="cuisine"
          value="<%= food.cuisine || '' %>"
        />
      </div>

      <div>
        <label>Difficulty</label>
        <select name="difficulty" id="difficulty">
          <% if (!food.difficulty) { %>
          <option value="" selected>-- select --</option>
          <% } else { %>
          <option value="">-- select --</option>
          <% } %>
          <% if (food.difficulty === 'easy') { %>
          <option value="easy" selected>Easy</option>
          <% } else { %>
          <option value="easy">Easy</option>
          <% } %>
          <% if (food.difficulty === 'medium') { %>
          <option value="medium" selected>Medium</option>
          <% } else { %>
          <option value="medium">Medium</option>
          <% } %>
          <% if (food.difficulty === 'hard') { %>
          <option value="hard" selected>Hard</option>
          <% } else { %>
          <option value="hard">Hard</option>
          <% } %>
        </select>
      </div>

      <button type="submit">Update Item</button>
    </form>

    <a href="/users/<%= user._id %>/foods">
      <button type="button">Back to Pantry</button>
    </a>
  </body>
</html>
